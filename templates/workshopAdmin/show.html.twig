{% extends 'base.html.twig' %}

{% block title %}Workshop{% endblock %}

{% block body %}
    <h1>Workshop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workshop.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ workshop.titre }}</td>
            </tr>
            <tr>
                <th>Nom_artiste</th>
                <td>{{ workshop.nomArtiste }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ workshop.duree }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ workshop.date ? workshop.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_debut</th>
                <td>{{ workshop.heureDebut ? workshop.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_fin</th>
                <td>{{ workshop.heureFin ? workshop.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nb_places</th>
                <td>{{ workshop.nbPlaces }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ workshop.categorie }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ workshop.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ workshop.image }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ workshop.etat }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ workshop.niveau }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ workshop.createdAt ? workshop.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ workshop.updatedAt ? workshop.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mots_cles</th>
                <td>{{ workshop.motsCles }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ workshop.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_workshop_index') }}">back to list</a>

    <a href="{{ path('app_workshop_edit', {'id': workshop.id}) }}">edit</a>

    {{ include('workshop/_delete_form.html.twig') }}
