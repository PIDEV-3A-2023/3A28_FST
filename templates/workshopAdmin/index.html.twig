{% extends 'baseAdmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
         
        table {
            /* table-layout: fixed;  hedhi zidha ken theb ywali tableau yben kemel*/
            width: 100%;
        }
        th, td {
            text-align: center;
            overflow: hidden;
            white-space: nowrap;
        }
        td img {
            max-width: 75px;
            max-height: 75px;
        }
    </style>
{% endblock %}
{% block body %}
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column" style="width: 1100px; height: 1200px;">

            <!-- Main Content -->
            <div id="content">


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Tables des Workshops</h1>


                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <a href="{{ path('addwA') }}" class="btn btn-primary"><i class="bi bi-plus-square"></i> Ajouter un Workshop</a>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <td> image </td>
                                            <td> nom_artiste </td>
                                            <td>titre</td>
                                            <td>duree</td>
                                            <td> date </td>
                                            <td> description </td>
                                           
                                            <td>Categorie</td>
                                            <td> heure_debut </td>
                                            <td> heure_fin </td>
                                            <td> prix </td>
                                            <td>etat</td>
                                            <td>Niveau</td>
                                            <td> nbPlaces </td>
                                           
                                            <td> createdAt </td>
                                            <td> updatedAt </td>
                                         
                                            <td> Action1 </td>
                                            <td> Action2 </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for s in workshops |sort |reverse %}
                                        <tr>
                                            <td>
                                                <img src="{{ asset('assets/img/' ~ s.image) }}" alt="{{ s.image }}" style="width: 75px; height: 75;">
                                    
                                            </td>
                                            <td>{{(s.nomartiste) }}</td>
                                            <td><small style="font-size: 12px;">{{ s.titre}}</small></td>
                                            <td>{{ s.duree}}</td>
                                            <td><small style="font-size: 12px;">{{ s.date ? s.date|date('Y-m-d ') : '' }}</small></td>
                                            <td>{{s.description }}</td>
                                            
                                            <td>{{(s.categorie) }}</td>
                                            <td>{{ (s.heuredebut)|date('H:i:s') }}</td>
                                            <td>{{ (s.heurefin)|date('H:i:s') }}</td>
                                            <td>{{ s.prix }}</td>
                                            <td>{{ s.etat }}</td>
                                            <td>{{s.niveau}}</td>
                                            <td>{{s.nbPlaces }}</td>
                                           
                                            <td>{{ s.createdAt |date(' d-m-Y H:i:s')}}</td>
                                            <td>{{ s.updatedAt |date('d-m-Y H:i:s') }}</td>   
                                            
                                            <td> <form action="{{ path('deleteWorkshopAdmin', {'id': s.id}) }}" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
       
                                                <button type="submit" class="btn btn-delete" style="color: #dc3545;" >
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form></td>
                                            <!-- {{ include('workshopAdmin/_delete_form.html.twig') }} -->
 
                                           <td> <form action="{{ path('updateWorkshopp', {'id': s.id}) }}" method="GET" class="d-inline">
                                            <button type="submit" class="btn btn-edit" style="color: #007bff;">
                                                <i class="bi bi-pencil-square"></i>Modifier
                                            </button>
                                        </form></td> 


                                            
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

 {% endblock %} 