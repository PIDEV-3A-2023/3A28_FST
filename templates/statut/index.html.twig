{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
	<main
		id="main">

		<!-- ======= Breadcrumbs ======= -->
		<section class="breadcrumbs">
			<div class="container">


				<h2>Forum</h2>

			</div>
		</section>
		<!-- End Breadcrumbs -->

		<!-- ======= Blog Section ======= -->
		<section id="blog" class="blog">
			<div class="container" data-aos="fade-up">


				<div class="row">

					<div class="col-lg-8 entries">
						{% for s in stat %}

							<article class="entry" style="text-align: center; background-color: #eff1d4
																																																																																																																																																																																																																																																																																																																																																																																																																																																																								;">

								<div style="text-align: center;">
									<img src="{{asset('assets/img/blog/art22.jpg')}}" alt="" style="max-width: 100%; height: auto;">
								</div>


								<h2 class="entry-title">
									<a href="blog-single.html">{{s.titre}}</a>
								</h2>

								<div class="entry-meta">
									<ul>
										<li class="d-flex align-items-center">
											<i class="bi bi-person"></i>
											<a href="blog-single.html">{{s.username}}</a>
										</li>
										<li class="d-flex align-items-center">
											<i class="bi bi-clock"></i>
											<a href="blog-single.html">
												<time datetime="2020-01-01">{{s.created|date('d-m-Y')}}</time>
											</a>
										</li>
										<li class="d-flex align-items-center">
											<i class="bi bi-chat-square-heart"></i>
											<a href="blog-single.html">{{s.nbrLike}}</a>
										</li>
										<li class="d-flex align-items-center">
											<i class="bi bi-chat-square-text"></i>
											<a href="blog-single.html"></a>
										</li>

									</ul>
								</div>

								<div class="entry-content">
									<p>
										{{s.contenu}}
									</p>
									<div class="read-more mx-2">
										<a href="{{path('showcommentaire',{'id':s.id})}}">Lire Plus</a>
									</div>
									<div class="d-flex justify-content-center">

										<div class="read-more mx-2">
											<a href="{{path('removestatut',{'id':s.id})}}">
												<i class="bi bi-trash3-fill"></i>
											</a>
										</div>
										<div class="read-more mx-2">
											<a href="{{path('updatestatut',{'id':s.id})}}">
												<i class="bi bi-pencil-square"></i>
											</a>
										</div>
									</div>
								</div>

							</article>
						{% endfor %}
						<!-- End blog entry -->


					</div>
					<!-- End blog entries list -->

					<div class="col-lg-4">

						<div class="sidebar">

							<h3 class="sidebar-title">Search</h3>
							<div class="sidebar-item search-form">
								<form action="">
									<input type="text">
									<button type="submit">
										<i class="bi bi-search"></i>
									</button>
								</form>
							</div>
							<br>
							<!-- End sidebar search formn-->
							<h3 class="sidebar-title">Exprimez-vous !
								<a class="read-more" href="{{path('addstatut')}}">
									<i class="bi bi-plus-square-fill"></i>
								</a>
							</h3>

							<br>


							<h3 class="sidebar-title">Recent Posts</h3>
							<div class="sidebar-item recent-posts">
								<div class="post-item clearfix">
									<img src="assets/img/blog/blog-recent-1.jpg" alt="">
									<h4>
										<a href="blog-single.html">xxx</a>
									</h4>
									<time datetime="2020-01-01">Jan 1, 2020</time>
								</div>


							</div>
							<!-- End sidebar recent posts-->

							<!-- End sidebar tags-->

						</div>
						<!-- End sidebar -->

					</div>
					<!-- End blog sidebar -->

				</div>


			</div>
		</section>
		<!-- End Blog Section -->

	</main>

{% endblock %}
