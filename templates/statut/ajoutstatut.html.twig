{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}

	<section id="contact" class="contact">

		<div class="container center" data-aos="fade-up">

			<header class="section-header">
				<h2>Statut</h2>
				<p>
					Exprimer-vous !
				</p>
			</header>

			<div class="row gy-4">


				<div class="col-lg-12">
					{{ form_start(f, {'attr':{'novalidate':'novalidate'}}) }}

					<div class="row gy-4">

						<div class="col-md-6">
							{{ form_label(f.username)}}
							{{ form_widget(f.username,{'attr':{'class':'form-control'}})}}
						</div>

						<div class="col-md-6 ">
							{{ form_label(f.titre)}}
							{{ form_widget(f.titre,{'attr':{'class':'form-control'}})}}
							{{ form_errors(f.titre, {'attr': {'class': 'text-danger','placeholder': ''}}) }}

						</div>

						<div class="col-md-12">
							{{ form_label(f.contenu)}}
							{{ form_widget(f.contenu,{'attr':{'class':'form-control'}})}}
							{{ form_errors(f.contenu, {'attr': {'class': 'text-danger','placeholder': ''}}) }}

						</div>
						<div class="col-md-12">
							{{ form_label(f.type)}}
							{{ form_widget(f.type,{'attr':{'class':'form-control'}})}}

						</div>
						<div class="col-md-12">
							{{ form_widget(f.image,{'attr':{'class':'form-control'}})}}

						</div>


						<div class="col-md-12 text-center">
							<button type="submit">Ajouter
								<i class="bi bi-plus-square-fill"></i>
							</button>
						</div>

					</div>
					{{ form_end(f) }}

				</div>

			</div>

		</div>

	</section>

{% endblock %}
