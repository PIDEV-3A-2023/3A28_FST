{% extends 'baseBack.html.twig' %}

{% block body %}

	<hr
		class="sidebar-divider">
		<!-- Nav Item - Charts -->
		<li class="nav-item">
			<a class="nav-link" href="{{ path ('showdashboard')}}">
				<i class="fas fa-fw fa-chart-area"></i>
				<span>Statuts</span>
			</a>
		</li>

		<!-- Nav Item - Tables -->
		<li class="nav-item">
			<a class="nav-link" href="{{ path ('showdashboardcom')}}">
				<i class="fas fa-fw fa-table"></i>
				<span>Commentaires</span>
			</a>
		</li>

		<li class="nav-item">
			<a class="nav-link" href="{{ path ('app_back_stat')}}">
				<i class="fas fa-fw fa-table"></i>
				<span>Statistiques</span>
			</a>
		</li>
	</hr>
	<div class="container">
		<h2>Statut Statistiques</h2>
		<div class="row">
			<div class="col-md-6">
				<div id="barchart"></div>
			</div>
			<div class="col-md-6">
				<div id="piechart"></div>
			</div>
		</div>
		<br>
	</div>
{% endblock %}

{% block js %}
	{{ parent() }}
	<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	<script type="text/javascript">
		google.charts.load('current', {'packages': ['corechart']});
google.charts.setOnLoadCallback(drawCharts);
function drawCharts() {
var data1 = google.visualization.arrayToDataTable({{ data1|json_encode|raw }});
var data2 = google.visualization.arrayToDataTable({{ data2|json_encode|raw }});

var options1 = {
title: 'Likes Par Type',
chartType: 'Bar'
};
var options2 = {
title: 'Likes Par Statut',
is3D: true
};

var chart1 = new google.visualization.BarChart(document.getElementById('barchart'));
chart1.draw(data1, options1);

var chart2 = new google.visualization.PieChart(document.getElementById('piechart'));
chart2.draw(data2, options2);

}
	</script>
{% endblock %}
