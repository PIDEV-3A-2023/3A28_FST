{% extends 'baseBack.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Statut Statistiques</h2>
        <div class="row">
            <div class="col-md-6">
                <div id="barchart"></div>
            </div>
            <div class="col-md-6">
                <div id="piechart"></div>
            </div>
        </div>
        <br>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawCharts);
        function drawCharts() {
            var data1 = google.visualization.arrayToDataTable({{ data1|json_encode|raw }});
            var options1 = {
                title: 'Likes Par Type',
                chartType: 'Bar',
            };
            
            var chart1 = new google.visualization.BarChart(document.getElementById('barchart'));
            chart1.draw(data1, options1);
           
        }
    </script>
{% endblock %}