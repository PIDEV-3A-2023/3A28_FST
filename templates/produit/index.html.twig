{% extends 'base.html.twig' %}

{% block title %}Art Station{% endblock %}



{% block body %}
    <section id="portfolio" class="portfolio">
      <div class="container" data-aos="fade-up" data-aos-delay="200" style="overflow-y: scroll; height: 500px; ">

        <div class="section-title">
          <h2>Les produits</h2>
        </div>
          <div class="row" data-aos="fade-up" data-aos-delay="100">
          <div class="col-lg-12 d-flex justify-content-center">
            <div class="d-flex">
                <a href="{{ path('ajoutProduit') }}" class="btn btn mb-2 mr-1 mx-auto" style="width: 40%; background-color: white; color: black; border: 2px solid #455771; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 3px 10px 0 rgba(0,0,0,0.19);">Ajouter Produit</a>

                <a href="{{ path('ajoutCategorie') }}" class="btn btn mb-2 ml-1 mx-auto" style="width: 40%; background-color: white; color: black; border: 2px solid #FAC881; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 3px 10px 0 rgba(0,0,0,0.19);">Ajouter Categorie</a>
            </div>
          </div>
        </div>
        <div class="row gy-4 portfolio-container" >
        {% for produit in produits %}
            <div class="col-md-2 mb-2">
                <div class="card">
                    <img src="uploads/images/{{produit.image}}" alt="{{ produit.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text">{{ produit.description }}</p>
                        <p class="card-text">{{ produit.prix }} DT</p>
                      
                        <a href="#" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
        {% endfor %}
          </div>
        </div>
      </div>
    </section>
{% endblock %}

