{% extends 'base.html.twig' %}

{% block title %}Art Station{% endblock %}



{% block body %}
    <section id="portfolio" class="portfolio">
      <div class="container" data-aos="fade-up" data-aos-delay="200" style=" height: 1000px; ">

        <div class="section-title">
          <h2>Les produits</h2>
          <div class="row justify-content-center mt-3">
            <div class="col-md-3">
           <form action="{{ path('search') }}" method="GET" class="mt-3" style ="margin-top: 20px; margin-bottom:40px">
            <div class="input-group" style =" width: 300px;">
              <input type="text" name="query" class="form-control" placeholder="Chercher un produit..." style ="
                padding: 6px 12px;
                font-size: 14px;
                line-height: 1.428571429;
                color: #555;
                background-color: #fff;
                background-image: none;
                border: 1px solid #ccc;
                border-radius: 4px;
                -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
                box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);">
              <button type="submit" class="btn btn-primary" style="   padding: 6px 12px;
                font-size: 14px;
                line-height: 1.428571429;
                text-align: center;
                white-space: nowrap;
                vertical-align: middle;
                cursor: pointer;
                background-image: none;
                border: 1px solid #3c8dbc;
                border-radius: 4px;
                color: #fff;
                background-color: #3c8dbc;"><i class="fa fa-search"></i></button>
          </div>
        </form>
        </div>
        </div>
        </div>
          <div class="row" data-aos="fade-up" data-aos-delay="100">
          <div class="col-lg-12 d-flex justify-content-center">
            <!--div class="d-flex">
                <a href="{{ path('ajoutProduit') }}" class="btn btn mb-2 mr-1 mx-auto" style="width: 40%; background-color: white; color: black; border: 2px solid #455771; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 3px 10px 0 rgba(0,0,0,0.19);">Ajouter Produit</a>

                <a href="{{ path('ajoutCategorie') }}" class="btn btn mb-2 ml-1 mx-auto" style="width: 40%; background-color: white; color: black; border: 2px solid #FAC881; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 3px 10px 0 rgba(0,0,0,0.19);">Ajouter Categorie</a>
            </div-->
          </div>
        </div>
        <div class="row gy-4 portfolio-container" >
        {% for produit in pagination %}
            <div class="col-md-2 mb-2">
                <div class="card">
                    <img src="uploads/images/{{produit.image}}" alt="{{ produit.nom }}" style="width: 191.5px; height: 199px; object-fit: cover; border: 1px solid #ccc; box-shadow: 0px 0px 5px #ccc;">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text">{{ produit.prix }} DT</p>
                      
                        <a href="#" class="btn btn-primary cart-btn"><i class="fas fa-shopping-cart"></i></a>
                        <a href="#" class="heart-icon"><i class="fa fa-heart"></i></a>
                    </div>
                </div>
            </div>
        {% endfor %}
     <div class ="d-flex justify-content-center">
     
     {{knp_pagination_render(pagination, 'pagination.html.twig')}}
          </div>
        </div>
      </div>
    </section>
{% endblock %}


