{% extends 'base.html.twig' %}

{% block title %}Art Station{% endblock %}



{% block body %}
  <section class="breadcrumbs">
        <div class="container">
          <ol>
            <h4>Portfolio Details</h4>
          </ol>
        </div>
    </section>
    <section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up" data-aos-delay="200" style="height: 600px;" >

      <div class ="container">
           <form action="{{ path('search') }}" method="GET" class="mt-3" style ="margin-bottom:20px">
            <div class="input-group" style =" width: 300px;" >
              <input type="text" name="query" class="form-control" placeholder="Chercher un produit..." style ="
                padding: 6px 12px;
                font-size: 14px;
                line-height: 1.428571429;
                color: #555;
                background-color: #fff;
                background-image: none;
                border: 1px solid #ccc;
                border-radius: 4px;
                -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
                box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);">
              <button type="submit" class="btn btn-primary" style="padding: 6px 12px;
                margin-left:5px;
                font-size: 14px;
                line-height: 1.428571429;
                text-align: center;
                white-space: nowrap;
                vertical-align: middle;
                cursor: pointer;
                background-image: none;
                border: 1px solid #F6B49C;
                border-radius: 4px;
                color: #fff;
                background-color: #F6B49C;"><i class="fa fa-search"></i></button>
            </div>
            </div>
          </form>
            <form method="GET">
            <select name="sort_by" id="sort-by"  style ="
                padding: 6px 12px;
                font-size: 14px;
                line-height: 1.428571429;
                color: #555;
                background-color: #fff;
                background-image: none;
                border: 1px solid #ccc;
                border-radius: 4px;
                -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
                box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);">
                <option value="name">par nom</option>
                <option value="price_asc">Prix (du plus bas au plus élevé)</option>
                <option value="price_desc">Prix (du plus élevé au plus bas)</option>
            </select>
            <button type="submit" class="btn btn-primary" style="padding: 6px 12px;
                margin-left:5px;
                font-size: 14px;
                line-height: 1.428571429;
                text-align: center;
                white-space: nowrap;
                vertical-align: middle;
                cursor: pointer;
                background-image: none;
                border: 1px solid #F6B49C;
                border-radius: 4px;
                color: #fff;
                background-color: #F6B49C;"  >Sort</button>
        </form>
      <form id="filters" method="GET">
        <p>Filter by category:</p>
        {% for categorie in categories %}
          <div>
            <input type="checkbox" name="categories[]" id="cat{{categorie.id}}" value="{{categorie.id}}" {% if categorie.id in selectedCategories %}checked{% endif %}>
            <label for="cat{{categorie.id}}">{{categorie.nomctg}}</label>
          </div>
        {% endfor %}
        <button type="submit" style="padding: 6px 12px;
                margin-left:5px;
                font-size: 14px;
                line-height: 1.428571429;
                text-align: center;
                white-space: nowrap;
                vertical-align: middle;
                cursor: pointer;
                background-image: none;
                border: 1px solid #F6B49C;
                border-radius: 4px;
                color: #fff;
                background-color: #F6B49C;">Apply Filters</button>
      </form>
        <br><br>
        <div class="row gy-4 portfolio-container" >
       {% include "produit/content.html.twig" %}
        </div>
      </div>
    </section>
{% endblock %}




