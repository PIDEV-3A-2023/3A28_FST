{% extends 'baseFront.html.twig' %}
{% block title %}Art Station{% endblock %}


{% block body %}
    <section id="portfolio" class="portfolio">
      <div class="container" data-aos="fade-up" data-aos-delay="200" style="overflow-y: scroll; height: 500px; ">

        <div class="section-title">
          <h2>Les produits</h2>
        </div>
          <div class="row" data-aos="fade-up" data-aos-delay="100">
          <div class="col-lg-12 d-flex justify-content-center">
            <div class="d-flex">
            </div>
          </div>
        </div>
        <div class="row gy-4 portfolio-container" >
        {% for produit in produits %}
            <div class="col-md-2 mb-2">
                <div class="card">
                
                    <img src="{{ asset('/images/' ~ produit.image) }}" alt="{{ produit.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text">{{ produit.description }}</p>
                          <a    href={{ path('added_to_cart', {'id': produit.id})}} class="btn btn-primary">Add to cart</a>
                    
                    </div>
                </div>
            </div>
        {% endfor %}
          </div>
        </div>
      </div>
    </section>

{% endblock %}
