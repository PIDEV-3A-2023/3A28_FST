{% extends 'baseBack.html.twig' %}

{% block title %}Commentaires
{% endblock %}

{% block body %}

	<hr
		class="sidebar-divider">
		<!-- Nav Item - Charts -->
		<li class="nav-item">
			<a class="nav-link" href="{{ path ('showdashboard')}}">
				<i class="fas fa-fw fa-chart-area"></i>
				<span>Statuts</span>
			</a>
		</li>

		<!-- Nav Item - Tables -->
		<li class="nav-item">
			<a class="nav-link" href="{{ path ('showdashboardcom')}}">
				<i class="fas fa-fw fa-table"></i>
				<span>Commentaires</span>
			</a>
		</li>
	</hr>
	<div
		class="container-fluid">

		<!-- Page Heading -->
		<h1 class="h3 mb-2 text-gray-800">GÃ©rer les Commentaires</h1>

		<!-- DataTales Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Statut</h6>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr>

								<th>Nom</th>
								<th>commentaire</th>
								<th>Date d'ajout</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>Nom</th>
								<th>commentaire</th>
								<th>Date d'ajout</th>
							</tr>
						</tfoot>
						<tbody>
							{% for c in com %}

								<tr>

									<td>{{c.username}}</td>
									<td>{{c.description}}</td>
									<td>{{c.dateajout|date("d/m/Y")}}</td>
									<td>
										<a href="{{ path('modifier_cmtAdmin',{'id':c.id}) }}" class="btn btn-warning" onclick="return confirm('Are you sure you want to delete this post?')">
>
											<i class="bi bi-pencil-square"></i>
										</a>

										<a href="{{ path('supprimer_cmtAdmin',{'id':c.id}) }}" class="btn btn-primary">
											<i class="bi bi-trash3-fill"></i>
										</a>
									</td>
								</tr>

							{% endfor %}


						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- Pagination -->
		<!-- Pagination -->
		<div class="d-flex justify-content-center">

